<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".QuestionsActivity"
    tools:showIn="@layout/activity_questions">
    <TextView android:id="@+id/question_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Question 1/100"
        android:textSize="35sp"
        />
    <TextView android:id="@+id/question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="7 x 4 = ?"
        android:textSize="25sp"
        />
    <!--opaque red-->
    <!--android:textColor="#f00"-->
    <!--translucent red-->
    <!--android:textColor="#80ff0000"-->
    <TextView android:id="@+id/error_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:textColor="#f00"
        />


    <EditText android:id="@+id/question_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/question_message"
        android:inputType="number"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_questions"
        android:onClick="answer"
        />

</LinearLayout>
